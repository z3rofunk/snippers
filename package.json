{
  "name": "snippers",
  "version": "0.1.0",
  "description": "Watch this space..",
  "author": "Zero Funk",
  "license": "MIT",
  "keywords": [],
  "type": "module",
  "scripts": {
    "test": "vitest",
    "format": "prettier --write . ",
    "format:check": "prettier --check  .prettierrc . ",
    "build": "unbuild --clean",
    "release:dry": "release-it --dry-run --no-npm",
    "release": "release-it"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/z3rofunk/snippers.git"
  },
  "bugs": {
    "url": "https://github.com/z3rofunk/snippers/issues"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./types": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/types/index.mjs"
      },
      "require": {
        "types": "./dist/types/index.d.cts",
        "default": "./dist/types/index.cjs"
      }
    }
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}",
      "push": true,
      "commit": true,
      "tag": true
    },
    "github": {
      "draft": true,
      "release": true,
      "releaseName": "v${version}"
    },
    "npm": {
      "publish": true,
      "ignoreVersion": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md",
        "header": "# Changelog"
      }
    },
    "hooks": {
      "before:init": "npm test",
      "after:bump": "npm run build",
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    }
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/node": "^24.4.0",
    "prettier": "^3.6.2",
    "release-it": "^19.0.4",
    "typescript": "^5.9.2",
    "unbuild": "^3.6.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}
